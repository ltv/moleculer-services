doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  include ../partials/head.pug
  body
    include ../partials/header.pug
    table.full(bgcolor='#F5F5F5' align='center' border='0' cellpadding='0' cellspacing='0')
      tbody
        tr
          td
            table.margin-full(bgcolor='white' width='750' align='center' border='0' cellpadding='0' cellspacing='0')
              tbody
                tr
                  td
                    table.margin-pad(width='600' align='center' border='0' cellpadding='0' cellspacing='0')
                      tbody
                        tr
                          td(height='70' style='font-size:0px')  
                        // subtitle
                        tr
                          td.res-center(style="text-align: center; color: #707070; font-family: 'Nunito', Arial, Sans-serif; font-size: 14px; letter-spacing: 0.7px; word-break: break-word; font-weight: 600;")
                            | PlatFox-Prinful
                        // subtitle end
                        tr
                          td(height='7' style='font-size:0px')  
                        // title
                        tr
                          td.res-center(style="text-align: center; color: #505050; font-family: 'Raleway', Arial, Sans-serif; font-size: 22px; letter-spacing: 0.7px; word-break: break-word")
                            | Verify your email address
                        // title end
                        tr
                          td(height='13' style='font-size:0px')  
                        // dash
                        tr
                          td
                            table.res-full(align='center' border='0' cellpadding='0' cellspacing='0')
                              tbody
                                tr
                                  td
                                    table(bgcolor='#4B546C' align='center' style='border-radius: 10px;' border='0' cellpadding='0' cellspacing='0')
                                      tbody
                                        tr
                                          td(width='50' height='3' style='font-size:0px')  
                        // dash end
                        tr
                          td(height='25' style='font-size:0px')  
                        // paragraph
                        tr
                          td.res-center(style="text-align: center; color: #707070; font-family: 'Nunito', Arial, Sans-serif; font-size: 17px; letter-spacing: 0.4px; line-height: 23px; word-break: break-word")
                            | Thanks for signup and here is your verification link:
                        // paragraph end
                        tr
                          td(height='15' style='font-size:0px')  
                        // button
                        tr
                          td
                            table.res-full(align='center' border='0' cellpadding='0' cellspacing='0')
                              tbody
                                tr
                                  td
                                    table(align='center' bgcolor='#4B546C' style='border: 1.5px solid white; border-radius: 4px;' border='0' cellpadding='0' cellspacing='0')
                                      tbody
                                        tr
                                          td(height='43' style='padding: 0 23px; text-align: center;')
                                            a(href=verifyLink style="color: white; letter-spacing: 1px; font-size: 17px; font-family: 'Nunito', Arial, Sans-serif; text-decoration: none; text-align: center; line-height: 24px; word-break: break-word;")
                                              | Confirm Email
                        // button end
                        tr
                          td(height='70' style='font-size:0px')  

    include ../partials/footer.pug
