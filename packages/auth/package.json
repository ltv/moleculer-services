{
  "name": "@ltv/auth",
  "version": "0.2.0",
  "description": "LTV moleculer auth service",
  "main": "index.js",
  "type": "index.d.ts",
  "author": "Luc <luc@ltv.vn>",
  "license": "MIT",
  "scripts": {
    "serve": "export NODE_PATH=./ && node -r ts-node/register node_modules/.bin/moleculer-runner --hot --repl --envfile=.env.development services --mask **/*.service.ts --config moleculer.config.ts",
    "start:prod": "moleculer-runner --env --mask **/*.service.js --config moleculer.config.js",
    "test:unit": "jest --coverage --forceExit",
    "build": "rimraf dist/* && webpack --node-args='--stack_size=6144 --max-old-space-size=6144' --progress --colors",
    "test": "jest --forceExit"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.2.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "helmet": "^3.21.2",
    "i18next": "^19.1.0",
    "i18next-node-fs-backend": "^2.1.3",
    "ioredis": "^4.14.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.compact": "^3.0.1",
    "lodash.flattendeep": "^4.4.0",
    "lodash.isequal": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "lodash.uniq": "^4.5.0",
    "lodash.uniqby": "^4.7.0",
    "moleculer": "^0.14.8",
    "moleculer-db": "^0.8.7",
    "moleculer-db-adapter-mongoose": "^0.8.4",
    "moleculer-decorators": "^1.2.0",
    "moleculer-web": "^0.9.1",
    "mongoose": "^5.9.18",
    "mongoose-hidden": "^1.9.0",
    "nats": "^1.4.0",
    "redlock": "^4.1.0"
  },
  "devDependencies": {
    "@ltv/core": "^0.2.0",
    "@ltv/types": "^0.2.0",
    "@types/bcrypt": "^3.0.0",
    "@types/faker": "^4.1.11",
    "@types/helmet": "^0.0.45",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/lodash.compact": "^3.0.6",
    "@types/lodash.flattendeep": "^4.4.6",
    "@types/lodash.isequal": "^4.5.5",
    "@types/lodash.pick": "^4.4.6",
    "@types/lodash.uniq": "^4.5.6",
    "@types/lodash.uniqby": "^4.7.6",
    "@types/mongodb": "^3.5.20",
    "@types/mongoose": "^5.7.22",
    "@types/node": "13.7.0",
    "copy-webpack-plugin": "^5.1.1",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "moleculer-repl": "^0.6.2",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^tests/(.*)$": "<rootDir>/tests/$1",
      "^models/(.*)$": "<rootDir>/models/$1",
      "^utils/(.*)$": "<rootDir>/utils/$1",
      "^mixins/(.*)$": "<rootDir>/mixins/$1",
      "^services/(.*)$": "<rootDir>/services/$1",
      "^errors/(.*)$": "<rootDir>/errors/$1",
      "^tests$": "<rootDir>/tests/index.ts",
      "^models$": "<rootDir>/models/index.ts",
      "^utils$": "<rootDir>/utils/index.ts",
      "^mixins$": "<rootDir>/mixins/index.ts",
      "^services$": "<rootDir>/services/index.ts",
      "^errors$": "<rootDir>/errors/index.ts"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "services/**/*.ts",
      "middlewares/**/*.ts",
      "mixins/**/*.ts",
      "utils/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "verbose": true,
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  }
}
