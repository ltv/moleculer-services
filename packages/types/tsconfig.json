{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "rootDir": "./",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "exclude": ["**/*.test.ts", "dist/**", "tests/**/*", "**/*.spec.ts"]
}
