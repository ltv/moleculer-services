{
  "name": "moleculer-services",
  "version": "0.1.0",
  "description": "Core services using for moleculerjs framework",
  "repository": "git@github.com:ltv/moleculer-services.git",
  "author": "Luc <luc@ltv.vn>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/ts-jest",
      "**/ts-jest/**",
      "**/ts-node",
      "**/ts-node/**",
      "**/jest",
      "**/jest/**",
      "**/@types/jest",
      "**/@types/jest/**",
      "**/@types/node",
      "**/@types/node/**"
    ]
  },
  "scripts": {
    "ci": "git-cz",
    "commit": "git-cz",
    "serve:docs": "yarn workspace @app/docs run serve",
    "serve:auth": "yarn workspace @app/auth run serve",
    "build:docs:image": "docker build --file packages/docs/Dockerfile packages --tag ms-docs",
    "build:auth:image": "docker build --file packages/auth/Dockerfile . --tag ms-auth",
    "release": "lerna publish",
    "precommit": "lint-staged",
    "test": "lerna run test --stream"
  },
  "devDependencies": {
    "git-cz": "^4.3.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "lint-staged": {
    "{packages}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
